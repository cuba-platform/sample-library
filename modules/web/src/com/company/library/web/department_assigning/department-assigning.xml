<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.library.web.department_assigning.DepartmentAssigning"
        messagesPack="com.company.library.web.department_assigning">
    <dsContext>
        <collectionDatasource id="libraryDepartmentsDs"
                              class="com.company.library.entity.LibraryDepartment"
                              view="_minimal">
            <query>
                <![CDATA[select ld from library$LibraryDepartment ld
                    order by ld.name]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="assign"
                caption="msg://assign"
                invoke="assign"/>
        <action id="close"
                caption="msg://close"
                invoke="close"/>
    </actions>
    <layout spacing="true">
        <lookupField id="libraryDepartmentField"
                     caption="msg://selectLibraryDepartment"
                     optionsDatasource="libraryDepartmentsDs"
                     width="100%"/>
        <hbox spacing="true">
            <button id="assignBtn"
                    action="assign"/>
            <button action="close"/>
        </hbox>
    </layout>
</window>
